<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieChoiceFragment">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Choose Your Movie!"
                android:textColor="#EA1212"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Movie1"
                android:layout_width="207dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:text="Movie 1" />

            <Button
                android:id="@+id/Movie2"
                android:layout_width="207dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:text="Movie 2" />

            <Button
                android:id="@+id/Movie3"
                android:layout_width="207dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:text="Movie 3" />

        </LinearLayout>
</FrameLayout>